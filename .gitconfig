[user]
	name = Bastien Caudan
	email = bastien.caudan@gmail.com
[color]
	diff = auto
	status = auto
	branch = auto
	ui = true
[alias]
	st = status
	ci = commit
	co = checkout
	lg = log --graph --pretty=tformat:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%an %cr)%Creset' --abbrev-commit --date=relative --graph --decorate --all
	oops = commit --amend -a -C HEAD
	pushn = "!f() { branch=`git branch | grep \\* | cut -d ' ' -f2`; git push --set-upstream origin ${branch}; };f"
[core]
	editor = vi
	excludesfile = ~/.gitignore_global
	quotepath = false
	ignorecase = true
	pager = less
	autocrlf = input
[credential]
	helper = osxkeychain
[push]
	default = simple
	followTags = true
[pull]
	rebase = preserve
[diff]
	indentHeuristic = true
[fetch]
	prune = true
